@import "../../utils/wxParse/wxParse.wxss";

.container {
    background-color: #fff;
    padding: 0 20rpx;
}

.wxParse-inline {
    font-size: 30rpx;
    color: #888;
    line-height: 1.7;
}

image {
    display: block;
}

.scroll-container {
    position: absolute;
    top: 0;
    bottom: 95rpx;
}

.container-body {
    padding: 20rpx;
}

.ico-link {
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    border: none !important;
    background-color: #d81e06 !important;
    color: #fff !important;
    border-radius: 0;
}